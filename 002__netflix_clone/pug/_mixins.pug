mixin password
    section.modalPassword
        .container
            p Ingresa tu PIN para acceder a este perfil.
            input.inputPassword(type="password", name="passwordUser")
            a Â¿Olvidaste tu PIN?
            input.cancelar(type="button", value="Cancelar")

mixin contenido
    each category in categoryInicio
        section(class="category "+category)
            h3 #{category}
            .contents
                if category==categoryInicio[0]
                    each image in imagesProfile
                        .history
                else
                    if category==categoryInicio[1]
                        each image in imagesProfile
                            .content
                                .play
                                    +iconPlayCircle
                                .more
                                    +iconInfo
                                    +iconMorePounts
                    else
                        each image in imagesProfile
                            .content

                
mixin profiles
    .users
        each perfil in perfiles
            .user
                img.imageUser(src="images/"+imagesProfile[perfil[3]]+".png", alt="Profile Image")
                h2 #{perfil[0]}
                if perfil[1]==1
                    +iconLocked


